<!-- Custome CSS for Dispatch tickets -->
<link rel="stylesheet" href="css/dispatch.css">

<!-- Custome CSS for /tickets tickets -->
<link rel="stylesheet" href="css/tickets.css">

<!-- Custome CSS for Dispatch tickets -->
<link rel="stylesheet" href="css/job.css">

<!-- Custome CSS for Dispatch tickets -->
<link rel="stylesheet" href="css/fuel.css">


<div id="search">
    <input type="text" placeholder="Search...">
</div>

<div id="tabs">
    <div id="dispatch">
        <span>Dispatches</span>
    </div>
    <div id="job">
        <span>Jobs</span>
    </div>
</div>

<!-- All Dispatches will be rendered in here -->
<div id="dispatch_container">
    <a href="/dispatch">
        <div class="dispatch confirmed">
            <h2>Winvan</h2>
            <span class="address">16091 20 ave Surrey</span>

            <div class="status">
                <div>
                    <i class="far fa-paper-plane"></i>
                    <span>2</span>
                </div>
                <div>
                    <i class="fas fa-check"></i>
                    <span>2</span>
                </div>
                <div>
                    <i class="fas fa-vote-yea"></i>
                    <span>0</span>
                </div>
            </div>

            <div class="num-trucks">
                <i class="fas fa-truck"></i>
                <span>4</span>
            </div>
        </div>
    </a>
</div>

<!-- All job tickets will be rendered here -->
<div id="job_container">
    <a href="/job">
        <div class="job active">
            <h2>Gurj Signh</h2>
            <span class="truck_num">#600</span>

            <div class="equipment">
                <div id="truck">
                    <span>2-axle </span>
                </div>
                <div id="trailer">
                    <span>4-axle-transfer</span>
                </div>
            </div>
            <div class="start_time">
                <span>7:00</span>
            </div>
        </div>
    </a>
</div>


<script>
    const dispatch = document.getElementById("dispatch");
    const job = document.getElementById("job");


    const dispatch_container = document.getElementById("dispatch_container");
    const job_container = document.getElementById("job_container");

    dispatch.addEventListener("click", (e) => {
        console.log("Dispatch")
        //Change tab colors
        job.style.backgroundColor = "#EFEFEF";
        dispatch.style.backgroundColor = "CFCFCF";

        //Change visible cards with CSS
        job_container.style.display = "none";
        dispatch_container.style.display = "block";
    })

    job.addEventListener("click", (e) => {
        console.log("Job")
        //Change tab colors
        dispatch.style.backgroundColor = "#EFEFEF";
        job.style.backgroundColor = "CFCFCF";

        //Change visible cards with CSS
        job_container.style.display = "block";
        dispatch_container.style.display = "none";
    })


</script>